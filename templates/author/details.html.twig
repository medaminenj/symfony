{% extends 'base.html.twig' %}

{% block title %} {{ author.username }}'s Details {% endblock %}

{% block body %}
    <h1>{{ author.username }}</h1>
    <img src="{{ asset(author.picture) }}" alt="Picture of {{ author.username }}" width="200"><br>
    <p><b>Email: </b>{{ author.email }}</p>
    <p><b>Number of Books: </b>{{ author.nb_books }}</p>
{% endblock %}